datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  output          = "./prisma-clients/gs_bootcamp"
  previewFeatures = ["metrics"]
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  first_name String
  last_name  String
  password   String
  profile    Profile?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Profile {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  contact       Int
  city          String
  gender        Gender
  age           Int
  type          StudentType
  college       String
  course_passed String
  passing_year  Int
  experience    Int
  user          User        @relation(fields: [userId], references: [id])
  userId        String      @unique @db.ObjectId
}

enum StudentType {
  College_Student
  Fresher
  Working_Professional
  Woman_Returning_to_work
}

enum Gender {
  Male
  Female
  Other
}
