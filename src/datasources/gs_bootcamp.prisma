
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL") 
}
generator client {
  provider        = "prisma-client-js"
  output          = "./prisma-clients/gs_bootcamp"
  previewFeatures = ["metrics"]
}
model User {
  user_id       Int     @id @default(autoincrement())
  email         String  @unique @db.VarChar(255)
  passwordHash  String  @db.VarChar(255)
  githubId      String? @db.VarChar(255)
  verified      Boolean @default(false)
  personalInfo  Json?
  bookings      Bookings[]
}
model Bootcamp {
  bootcamp_id  Int     @id @default(autoincrement())
  name         String  @unique
  description  String?
  schedule     Json    @db.JsonB
  dates        DateTime[]
  amount       Int
  mentors      String
  bookings     Bookings[]
}
model Mentor {
  mentor_id  Int     @id @default(autoincrement())
  name       String  @unique
  bio        String?
  expertise  String?
}
 model Bookings {
  booking_id  Int     @id @default(autoincrement())
  user        User    @relation(fields: [userId], references: [user_id])
  userId      Int
  bootcamp    Bootcamp  @relation(fields: [bootcampId], references: [bootcamp_id])
  bootcampId  Int
  status      String  @db.VarChar(50)
  payment     Payment[]
  createdAt   DateTime @default(now())
}
model Payment {
  payment_id     Int     @id @default(autoincrement())
  booking        Bookings @relation(fields: [bookingId], references: [booking_id])
  bookingId      Int
  amount         Decimal @db.Decimal(10,2)
  status         String  @db.VarChar(50)
  paymentDetails Json
  createdAt      DateTime @default(now())
}